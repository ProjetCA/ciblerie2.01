void loop() {
  ensureWiFiConnection();
  webSocket.loop();
  processIncomingSerialData();
  handleBluetoothCommands();

  unsigned long currentMillis = millis();
  if (currentMillis - lastPingTime > PING_INTERVAL) {
    sendWebSocketPing();
    checkClientTimeouts();
    lastPingTime = currentMillis;
  }
}

